<style>

.ace-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 2rem;
    }

    .header-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
      align-items: center;
    }

    .content-section {
      padding: 2rem;
      background: #f8f9fa;
      border-radius: 1rem;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .title {
      font-size: 2.5rem;
      font-weight: bold;
      margin-bottom: 1rem;
      color: #2d3748;
      font-style: italic;
    }

    .subtitle {
      font-size: 1.25rem;
      line-height: 1.6;
      color: #4a5568;
      margin-bottom: 1.5rem;
    }

    .social-link {
      color: #2d3748;
      text-decoration: none;
      font-weight: bold;
      transition: color 0.3s ease;
    }

    .social-link:hover {
      color: #4299e1;
    }

    .logo-section {
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .logo-container {
      width: 100%;
      max-width: 400px;
      animation: float 3s ease-in-out infinite;
    }

    @keyframes float {
      0% {
        transform: translateY(0px);
      }
      50% {
        transform: translateY(-20px);
      }
      100% {
        transform: translateY(0px);
      }
    }

    .logo {
      width: 100%;
      height: auto;
    }

    @media (max-width: 768px) {
      .header-grid {
        grid-template-columns: 1fr;
      }
      
      .content-section {
        text-align: center;
      }
      
      .logo-container {
        max-width: 300px;
        margin: 0 auto;
      }
    }
.levitate-body:after {
  content: '_______________________________________';
  margin-left: 60px;
  color: #3D3B40;
  -webkit-filter: blur(3px);
}

.logo {
  border-radius: 50%;
  height: 50%;
  width: 50%;
  background-color: #a0c2ce;
  text-align: center;
  margin-top: 40px;
  margin-bottom: 60px;
  margin-left: 100px;
  overflow: hidden;
  display: inline-block;
}

.levitate i {
  color: #fff;
  font: 700 50px Tahoma;
  text-shadow: 0px 0px #819da6, 1px 1px #819da6, 2px 2px #819da6, 3px 3px #819da6, 4px 4px #819da6, 5px 5px #819da6, 6px 6px #819da6, 7px 7px #819da6, 8px 8px #819da6, 9px 9px #819da6, 10px 10px #819da6, 11px 11px #819da6, 12px 12px #819da6, 13px 13px #819da6, 14px 14px #819da6, 15px 15px #819da6, 16px 16px #819da6, 17px 17px #819da6, 18px 18px #819da6, 19px 19px #819da6, 20px 20px #819da6, 21px 21px #819da6, 22px 22px #819da6, 23px 23px #819da6, 24px 24px #819da6, 25px 25px #819da6, 26px 26px #819da6, 27px 27px #819da6, 28px 28px #819da6;
}

.levitate {
  -webkit-animation-name: levitate;
  -webkit-animation-duration: 2.5s;
  -webkit-animation-iteration-count: infinite;
  -webkit-animation-timing-function: ease-in-out ease-in-out;
}

@-webkit-keyframes levitate {
  from {
    -webkit-transform: translate(0, 0px);
  }
  45% {
    -webkit-transform: translate(0, 20px);
  }
  to {
    -webkit-transform: translate(0, -0px);
  }
}
</style>
<main class="container">
  <div class="ace-container">
    <div class="header-grid">
      <div class="content-section">
        <h1 class="title">An association of computer engineers at NITK</h1>
        <p class="subtitle">Multiple lines of text that form the lede, informing new readers quickly and efficiently about what's most interesting in this post's contents.</p>
        <p><a href="#" class="social-link">Follow us on social media...</a></p>
      </div>
        <div class="logo-section">
          <div class="logo-container">
            <%= image_tag 'NewAce.png' %>
          </div>
        </div>
      </div>
    </div>
  <div class="row mb-2" id="vision">
    <div class="col-md-6">
      <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
        <div class="col p-4 d-flex flex-column position-static">
          <strong class="d-inline-block mb-2 text-primary-emphasis">Vision is the mission</strong>
          <h3 class="mb-0">Vision</h3>
          <div class="mb-1 text-body-secondary">Nov 12</div>
          <p class="card-text mb-auto">This is a wider card with supporting text below as a natural lead-in to additional content.</p>
          <a href="#" class="icon-link gap-1 icon-link-hover stretched-link">
            <svg class="bi"><use xlink:href="#chevron-right"></use></svg>
          </a>
        </div>
        <div class="col-auto d-none d-lg-block">
          <%= image_tag 'vision.jpg', width: '200px', height: '250px' %>
        </div>
      </div>
    </div>

    <div class="col-md-6" id="mission">
      <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
        <div class="col p-4 d-flex flex-column position-static">
          <strong class="d-inline-block mb-2 text-success-emphasis">Vision is the mission</strong>
          <h3 class="mb-0">Mission</h3>
          <div class="mb-1 text-body-secondary">Nov 11</div>
          <p class="mb-auto">This is a wider card with supporting text below as a natural lead-in to additional content.</p>
          <a href="#" class="icon-link gap-1 icon-link-hover stretched-link">
            <svg class="bi"><use xlink:href="#chevron-right"></use></svg>
          </a>
        </div>
        <div class="col-auto d-none d-lg-block">
          <%= image_tag 'mission.jpg', width: '200px', height: '250px' %>
        </div>
      </div>
    </div>
  </div>

  <div class="row g-5" id="announcements">
    <div class="col-md-8">
      <h3 class="pb-4 mb-4 fst-italic border-bottom">
        Events conducted by us year long...
      </h3>

      <% Event.all.each do |event| %>
        <div class="col-md-12">
          <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
            <div class="col p-4 d-flex flex-column position-static">
              <strong class="d-inline-block mb-2 text-primary-emphasis"><%= event.slogan %></strong>
              <h3 class="mb-0"><%= event.title %></h3>
              <div class="mb-1 text-body-secondary"><%= event.eventdate %></div>
              <p class="card-text mb-auto"><%= event.description %></p>
              <a href="#" class="icon-link gap-1 icon-link-hover stretched-link">
                <svg class="bi"><use xlink:href="#chevron-right"></use></svg>
              </a>
            </div>
            <div class="col-auto d-none d-lg-block">
              <% if event.thumbnail.attached? %>
                <%= image_tag url_for(event.thumbnail), width: '200px', height: '250px' %>
              <% else %>
                <%= image_tag "NewAce.png", width: '200px', height: '250px' %> <!-- Placeholder image -->
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="col-md-4">
      <div class="position-sticky" style="top: 4rem;">
        <div>
          <h4 class="fst-italic">Announcements</h4>
          <ul class="list-unstyled">
            <% Announcement.all.each do |announce| %>
              <li>
                <a class="d-flex flex-column flex-lg-row gap-3 align-items-start align-items-lg-start py-3 link-body-emphasis text-decoration-none border-top" href="#" data-bs-toggle="modal" data-bs-target="#announcementModal<%= announce.id %>">
                  <% if announce.image.attached? %>
                    <%= image_tag announce.image, style: "width: 100px; height: 2%;" %>
                  <% else %>
                    <svg class="bd-placeholder-img" width="100%" height="96" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false"><rect width="100%" height="100%" fill="#777"></rect></svg>
                  <% end %>
                  <div class="col-lg-8">
                    <h6 class="mb-0"><%= announce.title %></h6>
                    <% truncated_description = truncate(announce.description, length: 100) %>
                    <small class="text-body-secondary"><%= truncated_description %></small>
                  </div>
                </a>
              </li>
            <% end %>
          </ul>
        </div>
      </div>

      <div class="position-sticky" style="top: 2rem;">
        <div>
          <% @recent_blogs = Blog.order(created_at: :desc).limit(3) %>
          <h4 class="fst-italic">Blogs</h4>
          <ul class="list-unstyled">
            <% @recent_blogs.each do |blog| %>
              <li>
                <a class="d-flex flex-column flex-lg-row gap-3 align-items-start align-items-lg-center py-3 link-body-emphasis text-decoration-none border-top" href="#">
                  <%= image_tag blog.thumbnail, width: '100px', height: '100px' %>
                  <div class="col-lg-8">
                    <h6 class="mb-0"><%= blog.title %></h6>
                    <small class="text-body-secondary"><%= blog.description %></small>
                  </div>
                </a>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</main>
